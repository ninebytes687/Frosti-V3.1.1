---
const targetDate = new Date('2024-07-14T00:00:00');
const now = new Date();
const timeDifference = Math.abs(targetDate.getTime() - now.getTime()); // 使用 getTime() 获取时间戳

const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
const hours = Math.floor((timeDifference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);
---

<div id="countdown">
    ⏳ 博客已运行: {days} 天 {hours} 小时 {minutes} 分钟 {seconds} 秒
</div>

<style>
  #countdown {
    font-size: 14px; /* 调整为你需要的字体大小 */
    text-align: center; /* 或者其他对齐方式 */
    margin: 0; /* 移除默认的 margin */
    padding: 0; /* 移除默认的 padding */
  }
</style>

<script is:inline>
  function updateCountdown() {
    const targetDate = new Date('2024-07-14T00:00:00');
    const now = new Date();
    const timeDifference = Math.abs(targetDate - now); // 使用 Math.abs 确保时间差为正数

    const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
    const hours = Math.floor((timeDifference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

    document.getElementById('countdown').innerText = `⏳ 博客已运行: ${days} 天 ${hours} 小时 ${minutes} 分钟 ${seconds} 秒`;
  }

  setInterval(updateCountdown, 1000);
</script>
